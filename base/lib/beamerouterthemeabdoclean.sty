
\mode<presentation>

\setbeamercolor*{title}{parent=structure}
\setbeamercolor*{author}{parent=normal text}
\setbeamercolor*{institute}{parent=normal text}
\setbeamercolor*{date}{parent=normal text}

\defbeamertemplate*{frametitle}{abdoclean theme}[1][left]
{%
  \vspace{0.40em}%
  \noindent%
  \tikz[overlay,baseline=0.3em]{\fill (-0.3,0.05) rectangle (0,0.9);}%
  ~~\insertframetitle%
}

\defbeamertemplate*{title page}{abdoclean theme}[1][]
{
  \begin{center}\begin{minipage}{0.9\textwidth}
    \usebeamercolor[fg]{title}\usebeamerfont{title}{\huge \inserttitle}\par
    \bigskip
    \usebeamercolor[fg]{author}\usebeamerfont{author}{\large \insertauthor}\par
    \usebeamercolor[fg]{institute}\usebeamerfont{institute}{\small \insertinstitute}\par
    \bigskip
    \usebeamercolor[fg]{date}\usebeamerfont{date}{\small \insertdate}\par
  \end{minipage}\end{center}
}

% less margin on the sides
\setbeamersize{text margin left=1em,text margin right=1em}

